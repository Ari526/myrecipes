<%= render 'shared/page_title', title: "showing all chefs" %>
<div align="center">
  <%= will_paginate %>
</div>

<div align="center">
	<% @chefs.each do |chef| %>
	   <ul class="listing">
	   	<div class="row">
	   		<div class="well col-md-4 col-md-offset-4">
	   			<li><%= chef.chefname.capitalize, chef_path(chef) %></li>
	   			<li><%= link_to "Delete this chef", chef_path(chef), method: :delete, 
	   		             data: {confirm: "Are you want to delete this chef "} %></li>

	   		</div>
	   	</div>
	   </ul>
	   <% end %>
	</div>
	<div align="center">
		<%= will_paginate %>
	</div>